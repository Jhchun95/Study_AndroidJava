<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    >
    <RelativeLayout
    	android:id="@+id/titleLayout"
    	android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:background="#ffffffff"
	    ></RelativeLayout>
    <LinearLayout
    	android:id="@+id/contentsLayout"
    	android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="4dp"
    	android:layout_marginRight="4dp"
    	android:layout_below="@+id/titleLayout"
    	>
    	<LinearLayout
	    	android:id="@+id/mediaLayout"
	    	android:orientation="vertical"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="10dp"
	    	android:layout_gravity="center_horizontal"
	    	>

			<ImageView
				android:id="@+id/insert_photo"
				android:layout_width="250dp"
				android:layout_height="180dp"
				android:background="#fffeff85"
				android:scaleType="fitCenter"
				android:src="@drawable/person_add2" />
		    <LinearLayout
		    	android:orientation="horizontal"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_marginLeft="10dp"
		    	android:layout_gravity="center_horizontal"
		    	>
				<com.example.anyangstagram.common.TitleBitmapButton
					android:id="@+id/insert_videoBtn"
				    android:layout_width="1dp"
				    android:layout_height="1dp"
				    android:text="동영상"
					android:visibility="invisible"
				    android:textSize="18dp"
				    android:textStyle="bold"
				    android:textColor="#ff420000"
				    />
				<com.example.anyangstagram.common.TitleBitmapButton
					android:id="@+id/insert_voiceBtn"
				    android:layout_width="1dp"
				    android:layout_height="1dp"
				    android:layout_marginTop="10dp"
				    android:text="음성"
					android:visibility="invisible"
					android:textSize="18dp"
				    android:textStyle="bold"
				    android:textColor="#ff420000"
				    />
			</LinearLayout>
	    </LinearLayout>
	    <LinearLayout
	    	android:id="@+id/memoLayout"
	    	android:orientation="vertical"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="10dp"
	    	android:layout_gravity="center_horizontal"
	    	>
	    	<FrameLayout
		    	android:layout_width="wrap_content"
		    	android:layout_height="260dp"
		    	>

				<View
			    	android:id="@+id/insert_handwriting"
			    	android:layout_width="200dp"
			    	android:layout_height="160dp"
			    	android:layout_margin="5dp"
			    	android:background="@drawable/handwriting_back"
			    	android:visibility="gone"
			    	/>

				<com.example.anyangstagram.common.TitleBackgroundButton
					android:id="@+id/titleBackgroundBtn"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_alignParentTop="true"
					android:text="메모 추가"
					android:textSize="18dp"
					android:textStyle="bold"
					android:visibility="invisible" />

				<EditText
					android:id="@+id/insert_memoEdit"
					android:layout_width="350dp"
					android:layout_height="250dp"
					android:layout_margin="5dp"
					android:background="@drawable/memopaper"
					android:gravity="top"
					android:padding="10dp"
					android:textColor="#ff000000"
					android:textSize="18dp"
					android:textStyle="bold" />
			</FrameLayout>
		    <LinearLayout
		    	android:orientation="horizontal"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_marginLeft="10dp"
		    	android:layout_gravity="center_horizontal"
		    	>
				<!-->
				<com.example.anyangstagram.TitleBitmapButton
					android:id="@+id/insert_textBtn"
				    android:layout_width="1dp"
				    android:layout_height="1dp"
				    android:text="텍스트"
					android:visibility="invisible"
					android:textSize="18dp"
				    android:textStyle="bold"
				    android:textColor="#ff420000"
				    />
				<com.example.anyangstagram.TitleBitmapButton
					android:id="@+id/insert_handwritingBtn"
				    android:layout_width="1dp"
				    android:layout_height="1dp"
				    android:layout_marginTop="10dp"
				    android:text="손글씨"
					android:visibility="invisible"
					android:textSize="18dp"
				    android:textStyle="bold"
				    android:textColor="#ff420000"
				    /><!-->
			</LinearLayout>
	    </LinearLayout>
		<com.example.anyangstagram.common.TitleBitmapButton
	    	android:id="@+id/insert_dateBtn"
	    	android:layout_width="200dp"
	    	android:layout_height="50dp"
	    	android:layout_marginTop="10dp"
	    	android:layout_gravity="center_horizontal"
	    	android:layout_margin="5dp"
			android:enabled= "false"

	    	/>
	</LinearLayout>
    <LinearLayout
    	android:id="@+id/buttonLayout"
    	android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:layout_marginBottom="10dp"
    	android:layout_alignParentBottom="true"
    	>
    	<LinearLayout
	    	android:orientation="horizontal"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center_horizontal"
	    	>
			<com.example.anyangstagram.common.TitleBitmapButton
				android:id="@+id/insert_saveBtn"
			    android:layout_width="100dp"
			    android:layout_height="48dp"
			    android:text="저장"
			    android:textSize="18dp"
			    android:textStyle="bold"
			    android:textColor="#ff420000"
			    />
			<com.example.anyangstagram.common.TitleBitmapButton
				android:id="@+id/insert_cancelBtn"
			    android:layout_width="100dp"
			    android:layout_height="48dp"
			    android:layout_marginLeft="20dp"
			    android:text="닫기"
			    android:textSize="18dp"
			    android:textStyle="bold"
			    android:textColor="#ff420000"
			    />
			<com.example.anyangstagram.common.TitleBitmapButton
				android:id="@+id/deleteBtn"
				android:layout_width="90dp"
				android:layout_height="48dp"
				android:layout_marginLeft="20dp"
				android:text="삭제"
				android:textSize="18dp"
				android:textStyle="bold"
				android:textColor="#ff420000"
				android:visibility="gone"
				/>

		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
