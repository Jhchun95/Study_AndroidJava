<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivff01"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ff_momstouch"/>

    <TextView
        android:id="@+id/tvff01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ivff01"
        android:text="맘스터치 성결대점"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    <TextView
        android:id="@+id/tvff02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvff01"
        android:text="안양시 만안구 성결대학로 38"
        android:textColor="#000000" />
    <Button
        android:id="@+id/detailBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvff02"
        android:layout_alignParentRight="true"
        android:text="상세 정보"
        android:textSize="20dp"
        android:background="#ceeceb"/>

</RelativeLayout>